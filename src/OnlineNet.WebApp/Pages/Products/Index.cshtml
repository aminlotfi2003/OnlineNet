@page
@model OnlineNet.WebApp.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}

<h1 class="mb-3">Products</h1>

@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

<div class="mb-3">
    <a class="btn btn-primary" asp-page="Create">+ New Product</a>
</div>

@if (Model.Products is null || Model.Products.Count == 0)
{
    <div class="alert alert-info">No products yet.</div>
}
else
{
    <table class="table table-striped align-middle text-center">
        <thead>
            <tr>
                <th>Name</th>
                <th>SKU</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Status</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Products)
            {
                <tr>
                    <td>@p.Name</td>
                    <td><code>@p.Sku</code></td>
                    <td>@p.PriceAmount.ToString("N2") @p.PriceCurrency</td>
                    <td>@p.StockQuantity</td>
                    <td>
                        @if (p.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-page="Details" asp-route-id="@p.Id">Details</a> |
                        <a asp-page="Edit" asp-route-id="@p.Id">Edit</a> |
                        <a asp-page="Delete" asp-route-id="@p.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
