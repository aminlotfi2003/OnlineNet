@page "{id:guid}"
@model OnlineNet.WebApp.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form method="post">
    <input type="hidden" asp-for="Command.Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row g-3">

        <div class="col-md-6">
            <label asp-for="Command.Name" class="form-label"></label>
            <input asp-for="Command.Name" class="form-control" />
            <span asp-validation-for="Command.Name" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Command.Sku" class="form-label"></label>
            <input asp-for="Command.Sku" class="form-control" />
            <span asp-validation-for="Command.Sku" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Command.PriceAmount" class="form-label"></label>
            <input asp-for="Command.PriceAmount" class="form-control" />
            <span asp-validation-for="Command.PriceAmount" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Command.PriceCurrency" class="form-label"></label>
            <input asp-for="Command.PriceCurrency" class="form-control" maxlength="3" />
            <span asp-validation-for="Command.PriceCurrency" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Command.StockQuantity" class="form-label"></label>
            <input asp-for="Command.StockQuantity" class="form-control" />
            <span asp-validation-for="Command.StockQuantity" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Command.Description" class="form-label"></label>
            <textarea asp-for="Command.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Command.Description" class="text-danger"></span>
        </div>

        <div class="col-md-3 form-check mt-2">
            <input asp-for="Command.IsActive" class="form-check-input" />
            <label asp-for="Command.IsActive" class="form-check-label">Active</label>
        </div>

        <div class="col-12 d-flex gap-2 mt-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="Details" asp-route-id="@Model.Command.Id" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
